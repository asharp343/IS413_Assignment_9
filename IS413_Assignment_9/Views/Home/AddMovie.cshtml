@{
    ViewData["Title"] = "Add Movie";
    ViewData["Heading"] = "Add Movie";
}

@model Movie

<form asp-action="AddMovie" method="post">
    <label asp-for="Category">Category:</label>
    <input asp-for="Category" /><br />
    <div>@Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })</div>

    <label asp-for="Title">Title:</label>
    <input asp-for="Title" /><br />
    <div>@Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })</div>

    <label asp-for="Year">Year:</label>
    <input asp-for="Year" /><br />
    <div>@Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })</div>

    <label asp-for="Director">Director:</label>
    <input asp-for="Director" /><br />
    <div>@Html.ValidationMessageFor(model => model.Director, "", new { @class = "text-danger" })</div>

    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating">
        <option value="">Select One</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select><br />
    <div>@Html.ValidationMessageFor(model => model.Rating, "", new { @class = "text-danger" })</div>

    <label asp-for="Edited">Edited:</label>
    <select asp-for="Edited">
        <option value="">Select One</option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select><br />

    <label asp-for="LentTo">Lent To:</label>
    <input asp-for="LentTo" /><br />

    <label asp-for="Note">Note:</label>
    <input asp-for="Note" /><br /><br />
    <div>@Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })</div>

    <button type="submit" class="btn btn-info">Submit</button>

</form>

